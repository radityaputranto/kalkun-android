<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg"
    tools:context="com.example.didit.splashkalkun.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_toEndOf="@+id/button" />

    <Button
        android:layout_width="150px"
        android:layout_height="200px"
        android:text=" "
        android:id="@+id/button"
        android:background="@drawable/persiapan"
        android:layout_alignTop="@+id/button2"
        android:layout_alignStart="@+id/button4" />

    <Button
        android:layout_width="150px"
        android:layout_height="200px"
        android:id="@+id/button2"
        android:background="@drawable/dini"
        android:layout_alignTop="@+id/button3"
        android:layout_alignStart="@+id/button5" />

    <Button
        android:layout_width="150px"
        android:layout_height="200px"
        android:id="@+id/button3"
        android:background="@drawable/menengah"
        android:layout_above="@+id/button6"
        android:layout_alignStart="@+id/button6"
        android:layout_marginBottom="49dp" />

    <Button
        android:layout_width="150px"
        android:layout_height="200px"
        android:id="@+id/button4"
        android:background="@drawable/lanjut"
        android:layout_marginBottom="82dp"
        android:layout_above="@+id/button7"
        android:layout_alignStart="@+id/button7" />

    <Button
        android:layout_width="150px"
        android:layout_height="200px"
        android:id="@+id/button5"
        android:background="@drawable/penetasan"
        android:layout_alignTop="@+id/button4"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="150px"
        android:layout_height="200px"
        android:id="@+id/button6"
        android:background="@drawable/perawatan"
        android:layout_alignTop="@+id/button5"
        android:layout_alignEnd="@+id/button7" />

    <Button
        android:layout_width="600px"
        android:layout_height="100px"
        android:id="@+id/button7"
        android:background="@drawable/tips"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
